@model List<Pet>
@using FurryFeast.Models
@{
    ViewData["Title"] = "Shelter";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <style>
        .form-row {
            display: flex;
            align-items: center;
        }

        .form-row label {
            margin-right: 10px;
        }

        .pet-container {
            width: 1000px;
            margin: 0 auto;
        }

        .pet-item {
            width: 33.33%;
            text-align: center;
            padding: 10px;
            float: left;
        }
    </style>
</head>
<body>
    <div class="index-header">
        <h2>全台收容所資訊</h2>
    </div>

    <div style="text-align: center;">
        <form id="filterForm" method="get" action="/Article/Shelter">
            <div class="form-row">
                <select id="animal_kind" name="animal_kind">
                    <option value="">種類</option>
                    @foreach (var kind in ViewData["AnimalKinds"] as List<string>)
                    {
                        <option value="@kind">@kind</option>
                    }
                </select>

                <input type="text" id="animal_Variety" name="animal_Variety" placeholder="請輸入品種" />

                <select id="shelter_name" name="shelter_name">
                    <option value="">收容所</option>
                    @foreach (var shelter in ViewData["ShelterNames"] as List<string>)
                    {
                        <option value="@shelter">@shelter</option>
                    }
                </select>

                <select id="animal_sex" name="animal_sex">
                    <option value="">性別</option>
                    @foreach (var sex in ViewData["AnimalSexes"] as List<string>)
                    {
                        <option value="@sex">@sex</option>
                    }
                </select>

                <input type="text" id="animal_colour" name="animal_colour" placeholder="請輸入毛色" />

                <select id="animal_age" name="animal_age">
                    <option value="">年齡</option>
                    @foreach (var age in ViewData["AnimalAges"] as List<string>)
                    {
                        <option value="@age">@age</option>
                    }
                </select>

                <button type="submit">搜尋</button>
            </div>
        </form>
    </div>


    <div class="pet-container">
        @foreach (var pet in Model)
        {
            <div class="pet-item">
                <img src="@pet.ImageUrl" alt="Pet Image" style="width: 200px; height: 200px;">
                <p>Kind: @pet.animal_kind</p>
                <p>Variety: @pet.animal_Variety</p>
                <p>Sex: @pet.animal_sex</p>
            </div>
        }
    </div>

    @if (ViewBag.PageCount > 1)
    {
        <div style="clear:both;"></div>
<div style="text-align: center;">
@if (ViewBag.PageNumber > 1)
{
<a href="/Article/Shelter?page=@(ViewBag.PageNumber - 1)">Previous</a>
}
            @for (int i = 1; i <= ViewBag.PageCount; i++)
            {
                if (i == ViewBag.PageNumber)
                {
                    <span>@i</span>
                }
                else
                {
                    <a href="/Article/Shelter?page=@i">@i</a>
                }
            }
            @if (ViewBag.PageNumber < ViewBag.PageCount)
            {
                <a href="/Article/Shelter?page=@(ViewBag.PageNumber + 1)">Next</a>
            }
        </div>
    }
</body>
</html>