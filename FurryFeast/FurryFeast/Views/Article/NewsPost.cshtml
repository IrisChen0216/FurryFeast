@model FurryFeast.Models.Article


<!DOCTYPE html>
<head>
    @section Style{
        <link href="~/css/petclass/bootstrap.min.css" rel="stylesheet" />
        @*<link href="~/css/petclass/fonts.min.css" rel="stylesheet" />*@
        <link href="~/css/petclass/style.css" rel="stylesheet" />
    }
    <style>
        .post-modern-panel {
            display: flex;
            justify-content: space-between;
        }

            .post-modern-panel div:nth-child(2) {
                margin-left: auto;
            }

        .post-modern-text {
            margin-bottom: 20px;
        }

        .aside {
            margin-top: 60px;
        }

        .team-info {
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <section class="section section-xl bg-default text-md-left">
        <div class="container">
            <div class="row row-50 row-md-60">
                <div class="col-lg-8 col-xl-9">
                    <div class="inset-xl-right-100">
                        <div class="row row-50 row-md-60 row-lg-80">
                            <div class="col-12">
                                <article class="post post-modern box-xxl">
                                    <div class="post-modern-panel">
                                        <div><a class="post-modern-tag" href="#">News</a></div>
                                        <div>
                                            <time class="post-modern-time" datetime="@Model.ArticleDate.ToString("MMMM d, yyyy")">@Model.ArticleDate.ToString("MMMM d, yyyy")</time>

                                        </div>
                                    </div>
                                    <h4 class="post-modern-title">@Html.Raw(Model.ArticleTitle)</h4>
                                    <p class="post-modern-text">@Model.ArticleText</p>
                                   
                                </article>

                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-xl-3">
                    <div class="aside row row-30 row-md-50 justify-content-md-between">
                        <div class="aside-item col-12">
                            <div class="team-info box-sm">
                                <a class="team-info-figure" href="#"><img src="https://cdn.pixabay.com/photo/2022/06/25/18/59/dogs-7284056_1280.png" alt="" width="123" height="123" /></a>
                                <h6 class="team-info-title">@Model.Admin.AdminName</h6>
                            </div>
                            <!-- RD Search Form-->
                            <form class="rd-search form-search" action="search-results.html" method="GET">
                            </form>
                        </div>
                        <div class="aside-item col-sm-6 col-md-5 col-lg-12">
                            <h6 class="aside-title">Categories</h6>
                            <ul class="list-categories">
                                <li><a href="#">全部</a><span class="list-categories-number">(18)</span></li>
                                <li><a href="#">最新消息</a><span class="list-categories-number">(9)</span></li>

                            </ul>
                        </div>
                        <div class="aside-item col-sm-6 col-lg-12">
                            <h6 class="aside-title">最新文章</h6>
                            <div class="row row-20 row-lg-30 gutters-10">
                                <div class="col-6 col-lg-12">
                                    <!-- Post Minimal-->
                                    <article class="post post-minimal">
                                        <div class="unit unit-spacing-sm flex-column flex-lg-row align-items-lg-center">
                                            <div class="unit-left"><a class="post-minimal-figure" href="blog-post.html"><img alt="" width="260" height="254" /></a></div>
                                            <div class="unit-body">
                                                <p class="post-minimal-title"><a href="blog-post.html">Dog Friendly Summer Activities</a></p>
                                                <div class="post-minimal-time">
                                                    <time datetime="2020-03-15">March 15, 2020</time>
                                                </div>
                                            </div>
                                        </div>
                                    </article>
                                </div>
                                <div class="col-6 col-lg-12">
                                    <!-- Post Minimal-->
                                    <article class="post post-minimal">
                                        <div class="unit unit-spacing-sm flex-column flex-lg-row align-items-lg-center">
                                            <div class="unit-left"><a class="post-minimal-figure" href="blog-post.html"><img alt="" width="260" height="254" /></a></div>
                                            <div class="unit-body">
                                                <p class="post-minimal-title"><a href="blog-post.html">Crafting a Calm &amp; Friendly Cat</a></p>
                                                <div class="post-minimal-time">
                                                    <time datetime="2020-03-15">March 15, 2020</time>
                                                </div>
                                            </div>
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="js/core.min.js"></script>
    <script src="js/script.js"></script>
</body>
</html>
