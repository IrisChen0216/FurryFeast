@model List<FurryFeast.Models.Article>

@section Style{
    <link href="~/css/petclass/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/petclass/style.css" rel="stylesheet" />
}

<div class="index-header">
    <h2>最新消息</h2>
</div>
<h5>   歡迎來到我們的捐贈糧食頁面！我們相信每一點小小的幫助都可以讓這個世界變得更好。在這裡，您可以將您願意分享的糧食捐贈給需要的人。</h5>

@foreach (var article in Model)
{
    <div class="col-12">
        <article class="post post-modern box-xxl">
            <div class="post-modern-panel">
                <div><a class="post-modern-tag" href="#">News</a></div>
                <div>
                    <time class="post-modern-time" datetime='@article.ArticleDate.ToString("yyyy-MM-dd")'>
                        @article.ArticleDate.ToString("MMMM d, yyyy")
                    </time>
                </div>
            </div>
            <h4 class="post-modern-title" style="font-size: 20px;">
                <a asp-controller="Article" asp-action="NewsPost" asp-route-id="@article.ArticleId">@Html.Raw(article.ArticleTitle)</a>
            </h4>

            @if (article.ArticleText.Length <= 100)
            {
                <p class="post-modern-text">@article.ArticleText</p>
            }
            else
            {
                <p class="post-modern-text">@article.ArticleText.Substring(0, 100)...</p>
            }

            <a class="post-modern-link" asp-controller="Article" asp-action="NewsPost" asp-route-id="@article.ArticleId">Read more</a>


        </article>
    </div>
}
