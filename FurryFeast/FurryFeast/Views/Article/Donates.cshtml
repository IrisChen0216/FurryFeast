    <script>
        function donate(category) {
            var baseUrl = window.location.origin; // 取得當前頁面的基本URL
            var controller = 'Products'; // asp-controller的值
            var action = 'Index'; // asp-action的值

            // 建立完整的URL
            var url = baseUrl + '/' + controller + '/' + action;

            // 進行重定向到指定的URL
            window.location.href = url;
        }
