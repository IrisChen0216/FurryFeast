@model FurryFeast.Models.Donate
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<style>
    <style >
    .donate-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .donate-item {
        display: flex;
        margin-bottom: 20px;
    }

    .donate-image {
        width: 400px;
        height: auto;
        margin-right: 20px;
    }

    .donate-info {
        display: flex;
        flex-direction: column;
        justify-content: center; 
        align-items: center; 
        margin-left: 30px;
    }

    .donate-goal {
        font-size: 16px;
        margin-bottom: 5px;
    }

    .donate-progress-container {
        position: relative;
        width: 120px;
        height: 120px;
        margin-bottom: 10px;
    }

    .donate-progress {
        width: 120px;
        height: 120px;
    }

    .circle-bg {
        fill: none;
        stroke: #eee;
        stroke-width: 3.8;
    }

    .circle {
        fill: none;
        stroke: #ffd33b;
        stroke-width: 3.8;
        stroke-dasharray: 364.4;
        stroke-dashoffset: 364.4;
        transform-origin: center;
        transition: stroke-dashoffset 1s linear;
    }

    .donate-progress-percentage {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 20px;
        font-weight: bold;
    }

    .donate-current {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .donate-people {
        font-size: 16px;
    }

    .donate-btn {
        border: 2px solid #ffd33b;
        background-color: #ffd33b;
        color: white;
        padding: 10px;
        margin-top: 10px;
        cursor: pointer;
        transition: background-color 0.3s ease, border-color 0.3s ease;
        border-radius: 6px; /* 设置圆角 */
    }

        .donate-btn:hover {
            border-color: black;
            background-color: black;
            color: white;
        }

    .cropped-image {
        width: 600px;
        height: 300px;
        object-fit: cover;
        border-radius: 6px;
    }
    .article{
        width: 400px;
        height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .indented-paragraph {
        text-indent: 2em;
    }
</style>
<div class="index-header">
    <h2>糧食捐贈</h2>
    <p>
        歡迎來到我們的捐贈糧食頁面！ <br />我們相信每一點小小的幫助都可以讓這個世界變得更好。 <br />在這裡，您可以將您願意分享的糧食捐贈給需要的人。
    <p/>
    <br />
    <br />
    <br />
    <br />

</div>
<div class="donate-container">
    <div class="donate-item">
        <img class="cropped-image" src="https://img.freepik.com/free-photo/still-life-domestic-animal-food-composition_23-2148982410.jpg?w=1060&t=st=1684862867~exp=1684863467~hmac=f982a727cf2dcdcaa19d3909fb0f8679b8564ce2df2da6acbdffd6761532cd74" alt="狗狗飼料" />
        <div class="article" style="margin-left: 30px;">
            <h4>狗狗糧食</h4>
            <p class="indented-paragraph">
                愛護流浪犬，讓牠們擁有溫飽的生活！我們誠摯邀請您加入我們的募資行動，捐贈狗糧給那些無家可歸的可愛狗狗們。每一袋狗糧，都代表著一頓飽食，一份溫暖，一份關懷。您的善意將給予這些無辜生命們重新開始的機會。讓我們攜手，為流浪犬們帶來希望與幸福！您的捐款將直接用於購買高品質的狗糧，並送達到需要幫助的收容所和救援中心。透過您的愛心，我們可以一起為這些毛茸茸的天使們帶來溫暖和快樂。請為這些無辜的生命伸出援手，捐贈狗糧，讓愛與關懷永遠陪伴著牠們。感謝您的慷慨支持！
            </p>
       </div>
        <div class="donate-info" >
            <div class="donate-progress-container">
                <svg class="donate-progress" width="120" height="120">
                    <circle class="circle-bg" r="58" cx="60" cy="60"></circle>
                    <circle class="circle" id="dog-donate-progress-path" r="58" cx="60" cy="60"></circle>
                </svg>
                <div class="donate-progress-percentage" id="dog-donate-percentage"></div>
            </div>
            <div class="donate-goal">目標 NT$ @Model.DogDonateTotal</div>
            <div class="donate-current">目前 NT$ @Model.DogDonateMoney</div>
            <div class="donate-people">捐贈人數 @Model.DogDonatePeople 人</div>
            <button class="donate-btn">我要捐贈</button>
        </div>
    </div>
    <div class="donate-item">
        <img class="cropped-image" src="https://img.freepik.com/free-photo/domestic-pet-food-arrangement_23-2148982330.jpg?w=1380&t=st=1684862900~exp=1684863500~hmac=1a5eba2dde2ed61fed06ebaa7d8b201f982073466e862c9de87f96ddfef96eeb" alt="貓貓飼料" />
        <div class="article" style="margin-left: 30px;">
            <h4>貓貓糧食</h4>
            <p class="indented-paragraph">
                為了保護那些無家可歸的貓貓們，我們誠摯地邀請您參與我們的募資活動，捐贈貓糧給需要幫助的貓咪們。每一份捐贈，都能給予這些可愛的貓咪們飽腹的感受，給予牠們溫暖和關懷。您的善款將成為這些無辜生命的重生之力。讓我們攜手合作，為流浪貓們帶來新的希望和幸福！您的捐贈將直接用於購買優質的貓糧，並送達到收容所和救援中心，為那些貓咪提供所需的營養和食物。透過您的慷慨，我們可以一起為這些毛茸茸的小天使們帶去溫暖和歡樂。請伸出援手，捐贈貓糧，讓愛心和關懷總是陪伴著牠們。感謝您的支持和慷慨！
            </p>
        </div>
        <div class="donate-info">
            <div class="donate-progress-container">
                <svg class="donate-progress" width="120" height="120">
                    <circle class="circle-bg" r="58" cx="60" cy="60"></circle>
                    <circle class="circle" id="cat-donate-progress-path" r="58" cx="60" cy="60"></circle>
                </svg>
                <div class="donate-progress-percentage" id="cat-donate-percentage"></div>
            </div>
            <div class="donate-goal">目標 NT$ @Model.CatDonateTotal</div>
            <div class="donate-current">目前 NT$ @Model.CatDonateMoney</div>
            <div class="donate-people">捐贈人數 @Model.CatDonatePeople 人</div>
            <button class="donate-btn">我要捐贈</button>
        </div>
    </div>
</div>



<script>
    window.onload = function () {
        let dogDonateMoney = @Model.DogDonateMoney;
        let dogDonateTotal = @Model.DogDonateTotal;
        let dogDonatePercentage = Math.min(Math.floor((dogDonateMoney / dogDonateTotal) * 100), 100);
        document.getElementById('dog-donate-progress-path').style.strokeDashoffset = ((100 - dogDonatePercentage) / 100) * 364.4;
        document.getElementById('dog-donate-percentage').innerText = dogDonatePercentage + '%';

        let catDonateMoney = @Model.CatDonateMoney;
        let catDonateTotal = @Model.CatDonateTotal;
        let catDonatePercentage = Math.min(Math.floor((catDonateMoney / catDonateTotal) * 100), 100);
        document.getElementById('cat-donate-progress-path').style.strokeDashoffset = ((100 - catDonatePercentage) / 100) * 364.4;
        document.getElementById('cat-donate-percentage').innerText = catDonatePercentage + '%';
    }

</script>