
@{
    ViewData["Title"] = "PetFriendlyMap";
}
@section Style
{
	<link href="~/css/map/mapstyle.css" rel="stylesheet" />
	<style>
		.form-input {
			display: block;
			width: 100%;
			min-height: 50px;
			padding: 10px 0;
			font-size: 14px;
/*			font-weight: 400;
*/			line-height: 24px;
			letter-spacing: .1em;
/*			font-family: "Poppins", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
*/			color: #151515;
			background-color: transparent;
			background-image: none;
			-webkit-appearance: none;
			transition: .3s ease-in-out;
			border: 1px solid #e1e1e1;
			border-width: 0 0 1px 0;
		}

	</style>
}

<div class="index-header">
	<h2>寵物友善地圖</h2>
</div>
<div class="container mx-2">
	<div id="form" class="row">
		<div class="col">
			<select id="ChooseCity" class="form-input">
				<option selected>選擇縣市</option>
			</select>
		</div>
		<div class="col">
			<select id="ChooseCounty" class="form-input">
				<option selected>選擇鄉鎮/區</option>
			</select>
		</div>
		<div class="col">
			<button id="search" class="button button-lg button-primary button-zakaria" type="button">搜尋</button>
		</div>
	</div>
</div>
<div class="container mx-2">

	<div class="row" style="height: 600px;">
		<div id="map" class="col-7 m-0 p-3" style="max-width:100%;"></div>
		<div class="col-5">
			<div class="index-header m-0">
			</div>
			<div id="InfoBox" class="col">
			</div>
			<div id="InfoBoxBody" class="p-3 lh-lg">
			</div>
			<button type="button" id="btn_StreetView" class="button button-icon button-icon-left button-primary-outline visually-hidden">觀看街景地圖</button>
		</div>
	</div>
</div>


@section Scripts
{
	<script src="~/js/map.js"></script>
	<script async src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCwGI7BGNrDL_AtaZNvS9jHWweUj1IJsT0&callback=initMap&libraries=maps,marker&v=beta"></script>
}
