    <div id="Member" v-for="item in member">
        <label>姓名</label>
        <label>{{item.member.MemberName}}</label>
        <input class="form-input form-control" id="input" type="text" value={{item.memberData.MemberName}} name="name">
    </div>
    <div>
        <label>生日</label>
        <input type="date" value={{x.memberBirthday}}/>
    </div>
    <div>
        <label>性別</label>
        <input type="text" value={{x.memberGender}}>
    </div>
    <div>
        <label>手機號碼</label>
        <input type="text" maxlength="10" value={{x.memberPhone}}/>
    </div>
    <div>
        <label>Email</label>
        <span>{{x.memberEmail}}</span>
    </div>
    <div>
        <label>地址</label>
        <input type="text" value={{x.memberAdress}}/>
    </div>
    <div>
        <form asp-controller="Member" asp-action="UpdateMemberData">
            <button class="button button-lg button-primary button-zakaria">修改資料及密碼</button>
        </form>
    </div> 
</div>
