@{
	ViewData["Title"] = "Register";
}

@section Style{
	<style>
		.imgText {
			position: relative;
			text-align: center;
		}

			.imgText h2 {
				content: "FurryFeast";
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: -260px;
				display: flex;
				justify-content: center;
				align-items: center;
				font-size: 48px;
				font-weight: bold;
				color: white;
				border-radius: 50%;
			}

		.container {
			width: 90%;
		}

		.label {
			text-align: left;
			color: #ffd33b;
		}

		.gender {
			display: flex;
			align-items: center;
			min-height: 60px;
		}
	</style>
}
<div class="index-header">
	<h1>@ViewBag.regFail</h1>
	<h2>註冊會員</h2>
</div>
<div class="container">
	<div class="row">
		<div class="col-5">
			<div class="imgText">
				<img src="~/image/product/footer-gallery-1-original.jpg" />
				<h2>FurryFeast</h2>
			</div>
		</div>
		<div style="width:20px;"></div>
		<div class="col-6">
			<form action="/Member/RegisterIndex" method="post" name="register">
				<div>
					<h6 class="label">帳號: </h6>
					<input class="form-input form-control-has-validation" id="contact-first-name-2" type="email" placeholder="請輸入Email帳號" name="MemberAccount" data-constraints="Required" Required>
				</div>
				<div>
					<h6 class="label">密碼:</h6>
					<input class="form-input form-control-has-validation" id="contact-first-name-2" type="password" placeholder="請輸入密碼" name="MemberPassord" pattern="^(?=.*[A-Za-z])(?=.*\d).{8,}$" title="密碼必須包含英文字母和數字，並且最少為8個字符" data-constraints="Required" Required>
				</div>
				<div>
					<h6 class="label">姓名: </h6>
					<input class="form-input form-control-has-validation" id="contact-first-name-2" type="text" name="MemberName" placeholder="請輸入姓名" data-constraints="Required" Required>
				</div>
				<div>
					<h6 class="label">性別:</h6>
					<div class="gender">
						<input type="radio" name="MemberGender" value="0" Required>
						<span for="">男</span>
						<input type="radio" name="MemberGender" value="1" Required>
						<span for="">女</span>
					</div>
				</div>
				<div>
					<h6 class="label">生日:</h6>
					<input class="form-input form-control-has-validation" id="contact-first-name-2" type="date" name="MemberBirthday" data-constraints="Required" Required>
				</div>
				<div>
					<h6 class="label">手機號碼: </h6>
					<input class="form-input form-control-has-validation" id="contact-first-name-2"
					type="tel" placeholder="請輸入手機號碼" name="MemberPhone" data-constraints="Required" maxlength="10" 
					pattern="^09\d{8}$" title="手機號碼須符合台灣的手機號碼格式" Required>
				</div>
				<div class="btn">
					<button class="button button-primary button-primary button-zakaria" type="submit">註冊</button>
				</div>
			</form>
		</div>
	</div>
</div>


@*pattern="[0]{1}[9]{1}[0-9]{8}"*@