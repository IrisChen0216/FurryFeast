@model FurryFeast.Models.PetClass

@{
    ViewData["Title"] = "MyClass";
}

<h2 class="index-header">我的課程</h2>
<hr />

<div id="app">
    <table>
        <tr>
            <th>課程代碼</th>
            <th>課程名稱</th>
            <th>課程預定編號</th>
            <th>課程日期</th>
            <th>課程狀態</th>
        </tr>
        <tr v-for="item in myClass">
            <td>{{item.petClassId}}</td>
            <td>{{item.petClass}}</td>
            <td>{{item.classReservetionId}}</td>
            <td>{{item.classReservetionDate}}</td>
            <td>{{item.classReservetionState}}</td>
        </tr>
   </table>
        
</div>

@section Scripts{
    <script>
        let app = new Vue({
            el:"#app",
            data:{
                myClass:"",
            },
            mounted:function(){
                alert('d')
                let self = this;
                axios('/api/myclass/getpetclass').then(res => self.myClass = res.data)
            }

        })
    </script>

}
           
