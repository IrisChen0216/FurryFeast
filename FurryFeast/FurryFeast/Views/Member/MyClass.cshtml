@model FurryFeast.Models.PetClass

@{
    ViewData["Title"] = "MyClass";
}

<h2 class="index-header">我的課程</h2>
<hr />

<div id="app">
    <table>
        <tr>
            <th>課程代碼</th>
            <th>課程名稱</th>
            <th>課程價格</th>
            <th>課程日期</th>
            <th>課程資訊</th>
        </tr>
        <tr v-for="item in myClass">
            <td>{{item.PetClassId}}</td>
            <td>{{item.PetClassName}}</td>
            <td>{{item.PetClassPrice}}</td>
            <td>{{item.PetClassDate}}</td>
            <td>{{item.PetClassInformation}}</td>
        </tr>
   </table>
        
</div>

@section Scripts{
    <script>
        let app = new Vue({
            el:"#app",
            data:{
                myClass:[],
            },
            mounted:function(){
                let self = this;
                axios('/api/myclass/two').then(res=> self.myClass = res.data)
            }

        })
    </script>

}
           
