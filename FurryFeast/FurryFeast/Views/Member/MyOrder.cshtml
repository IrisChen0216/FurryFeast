@model IEnumerable<FurryFeast.Models.Order>

@{
    ViewData["Title"] = "MyOrder";
}

<div class="index-header">
    <h2>我的訂單</h2>
</div>
<hr />

<div id="app">
    <table >
        <tr>
            <th>訂單日期</th>
            <th>訂單編號</th>
            <th>訂單狀態</th>
            <th>訂單價格</th>
            <th>訂單明細</th>
        </tr>
        <tr v-for="order in orders" >
            <td>
                {{order.orderShipDate}}
            </td>
            <td>
                {{order.orderId}}
            </td>
            <td>
                {{order.orderStatus}}
            </td>
            <td>
                {{order.orderTotalPrice}}
            </td>
            <td>
                <a asp-controller="Member" asp-action="OrderDetail">訂單明細</a>
            </td>
        </tr>
    </table>
</div>




@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
    <script>
        let MyOrder = new Vue({
            el: "#app",
            data: {
                orders: [],
               
            },

            mounted: function () {
                let self = this;
                axios('/api/myorder/getmyorder').then(res => self.orders = res.data);
            }

        })
    </script>
}




