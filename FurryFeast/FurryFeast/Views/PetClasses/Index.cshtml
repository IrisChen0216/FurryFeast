                                        <div class="product-price-wrap">
                                            <div class="product-price product-price-old">$@item.PetClassPrice</div>
                                            <div class="product-price">$@item.PetClassPrice</div>
                                        </div>
                                            <p class="product-modern-text JQellipsis">@item.PetClassInformation</p><a class="button button-primary button-zakaria" asp-controller="PetClasses" asp-action="PetClassDetail" asp-route-id="@item.PetClassId">課程詳情</a>
                                    </div>
                                </div>
