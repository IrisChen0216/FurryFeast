                </div>
            </div>
        </div>
    </div>


@*描述文字*@
@section Scripts{
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script>
        $(function () {
            var len = 50; // 超過50個字以"..."取代
            $(".JQellipsis").each(function (i) {
                if ($(this).text().length > len) {
                    $(this).attr("title", $(this).text());
                    var text = $(this).text().substring(0, len - 1) + "...";
                    $(this).text(text);
                }
            });
        });
    </script>
}