                                    <a name="input-group-radio" asp-action="Index" asp-route-id="2">@Model.Where(n=>n.PetClassTypeId==2).Select(n=>n.PetClassType.PetClassTypeName).First()</a>
                                    @*<input name="input-group-radio" value="checkbox-2" type="checkbox">@Model.Where(n=>n.PetClassTypeId==2).Select(n=>n.PetClassType.PetClassTypeName).First()*@
                                    
                                </label><span class="list-shop-filter-number">(@Model.Where(type=>type.PetClassTypeId==2).Count())</span>
                            </li>
                            <li>
                                <label class="checkbox-inline">
                                    <a name="input-group-radio" asp-action="Index" asp-route-id="2">@Model.Where(n=>n.PetClassTypeId==1).Select(n=>n.PetClassType.PetClassTypeName).First()</a>
